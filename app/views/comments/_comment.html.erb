<div class="media">
  <div class="media-body">
    <small><%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %> ago, <%= comment.user %> said:</small>
    <% if policy(comment).destroy? %>
      | <%= link_to "Delete", [@post, comment], method: :delete %>
    <% end %>
    <p><%= comment.body %></p>
  </div>
</div>
